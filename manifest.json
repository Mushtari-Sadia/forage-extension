{
    "manifest_version": 2,
    "name": "Hello World Demo",
    "description": "A hello world extension!",
    "version": "1.0",
    "icons": {
        "128": "images/icon128.png",
        "48": "images/icon48.png",
        "16": "images/icon16.png"
    },

    "browser_action": {
        "default_icon": "images/icon16.png",
        "default_popup": "popup.html"
    },
    
    "background": {
        "scripts": ["background.js","lib.js"],
        "persistent": false
      },

    "content_scripts":[
    {
        "matches": ["https://dl.acm.org/doi/*"],
        "js": ["content.js"]
    }
    ],
    
      "permissions": [
        "https://dl.acm.org/doi/*",
        "http://127.0.0.1:8000/*",
        "activeTab", 
        "declarativeContent", 
        "storage",
        "cookies",
        "<all_urls>"
        ]
}